module cpu_timer
contains
subroutine get_walltime(wctime)
    use iso_fortran_env, only: int64
    implicit none
    integer, parameter :: dp = kind(1.0d0)
    real(dp) :: wctime
    integer(int64) :: r, c
    call system_clock(c, r)
    wctime = real(c, dp) / r
  end subroutine get_walltime
end module cpu_timer